<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCSHIELD AGENT"
        android:textColor="#00FF41"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Forensic Endpoint v2.0"
        android:textColor="#888888"
        android:textSize="14sp"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#111111"
        app:cardCornerRadius="12dp"
        app:strokeColor="#333333"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                app:tint="#00FF41" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SYSTEM SECURE"
                android:textColor="#00FF41"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitoring Active Logs..."
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:fontFamily="monospace"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAudit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:text="RUN PRIVACY AUDIT"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#00FF41"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardStatus"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAttack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="SIMULATE GPS ATTACK"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#FF0000"
        app:cornerRadius="8dp"
        app:strokeColor="#FF0000"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnAudit"/>

    <TextView
        android:id="@+id/tvLabelConsole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGENT LOG OUTPUT:"
        android:textColor="#666666"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAttack"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#0A0A0A"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelConsole"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvConsole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="> Initializing Agent...\n> Waiting for commands..."
            android:textColor="#00FF41"
            android:fontFamily="monospace"
            android:textSize="12sp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>